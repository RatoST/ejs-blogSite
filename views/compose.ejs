<%- include("partials/header"); -%>
<h1>Compose</h1>
<!-- pass variable and render from app.js under StartingContent -->
<form class="" action="/compose" method="post">
  <div class="form-group">

    <label>Title</label>
    <input class="form-control" type="text" name="postTitle" autocomplete="off">
  </div>
  <div class="form-group">

    <label>Post</label>
    <textarea class="form-control" name="postText" rows="5" cols="30"></textarea>
  </div>

  <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>



